<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="io.rover.rover">

    <!-- All of the following permissions are "non-dangerous", that is, Android versions 23
    (marshmallow) and greater will grant them immediately at install time and will not prompt the
    user for them at runtime.  On older versions they will be asked for at install time in the Play
    Store (or equivalent app store). -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application android:allowBackup="true" android:label="@string/app_name"
        android:supportsRtl="true">

        <!-- You should replace this entry for the Experience Activity in your own manifest in order
        to set your style and an optional parent activity for use when Experiences are launched
        directly from push notifications.  See the documentation. -->
        <activity
            android:name=".experiences.ui.containers.StandaloneExperienceHostActivity"
            android:theme="@style/EmptyThemeToDisableActionBar"
        />

        <activity android:name="io.rover.rover.experiences.TransientNotificationLaunchActivity" />

    </application>
</manifest>
